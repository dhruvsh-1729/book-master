generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// =======================
// MODELS
// =======================

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String?
  password  String?
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  books               BookMaster[]
  summaryTransactions SummaryTransaction[]
  defaultGenericSubjects UserDefaultGenericSubject[]
  defaultSpecificTags    UserDefaultSpecificTag[]

  @@map("users")
}

model GenericSubjectMaster {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  summaryTransactions SummaryTransactionGenericSubject[]
  defaultForUsers     UserDefaultGenericSubject[]

  @@map("generic_subject_masters")
}

model TagMaster {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  description String?
  category    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  summaryTransactions SummaryTransactionSpecificTag[]
  defaultForUsers     UserDefaultSpecificTag[]

  @@index([category])
  @@map("tag_masters")
}

model BookMaster {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  libraryNumber String
  bookName      String
  bookSummary   String?
  pageNumbers   String?
  grade         String?
  remark        String?
  edition       String?
  publisherName String?
  coverImageUrl String?
  coverImagePublicId String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  userId String @db.ObjectId

  // Relations
  user         User                 @relation(fields: [userId], references: [id])
  editor       BookEditor[]
  // (1) One book can have many summary transactions
  transactions SummaryTransaction[] @relation("BookToTransactions")

  @@index([userId])
  @@index([bookName])
  @@index([publisherName])
  @@index([grade])
  @@map("book_masters")
}

model BookEditor {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  bookId String  @db.ObjectId
  name   String
  role   String?

  book BookMaster @relation(fields: [bookId], references: [id])

  @@index([bookId])
  @@index([name])
  @@index([role])
  @@map("book_editors")
}

model SummaryTransaction {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  srNo              Int
  title             String?
  keywords          String?
  relevantParagraph Json?
  paragraphNo       String?
  pageNo            String?
  informationRating String?
  remark            String?
  summary           String?
  conclusion        String?
  footNote          String?
  imageUrl          String?
  imagePublicId     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  bookId String @db.ObjectId
  userId String @db.ObjectId

  // Relations
  book BookMaster @relation("BookToTransactions", fields: [bookId], references: [id])

  user             User                                 @relation(fields: [userId], references: [id])
  genericSubjects  SummaryTransactionGenericSubject[]
  specificSubjects SummaryTransactionSpecificTag[]
  bookMasterId     String?                              @db.ObjectId

  @@index([bookId])
  @@index([userId])
  @@index([srNo])
  @@index([title])
  @@map("summary_transactions")
}

model SummaryTransactionGenericSubject {
  id                    String             @id @default(auto()) @map("_id") @db.ObjectId
  summaryTransactionId  String             @db.ObjectId
  genericSubjectId      String             @db.ObjectId
  createdAt             DateTime           @default(now())

  summaryTransaction SummaryTransaction @relation(fields: [summaryTransactionId], references: [id])
  genericSubject     GenericSubjectMaster @relation(fields: [genericSubjectId], references: [id])

  @@unique([summaryTransactionId, genericSubjectId])
  @@index([genericSubjectId])
  @@map("summary_transaction_generic_subjects")
}

model SummaryTransactionSpecificTag {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  summaryTransactionId String   @db.ObjectId
  tagId                String   @db.ObjectId
  createdAt            DateTime @default(now())

  summaryTransaction SummaryTransaction @relation(fields: [summaryTransactionId], references: [id])
  tag               TagMaster           @relation(fields: [tagId], references: [id])

  @@unique([summaryTransactionId, tagId])
  @@index([tagId])
  @@map("summary_transaction_specific_tags")
}

model UserDefaultGenericSubject {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  userId           String   @db.ObjectId
  genericSubjectId String   @db.ObjectId
  createdAt        DateTime @default(now())

  user           User                @relation(fields: [userId], references: [id])
  genericSubject GenericSubjectMaster @relation(fields: [genericSubjectId], references: [id])

  @@unique([userId, genericSubjectId])
  @@index([genericSubjectId])
  @@map("user_default_generic_subjects")
}

model UserDefaultSpecificTag {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  userId  String   @db.ObjectId
  tagId   String   @db.ObjectId
  createdAt DateTime @default(now())

  user User     @relation(fields: [userId], references: [id])
  tag  TagMaster @relation(fields: [tagId], references: [id])

  @@unique([userId, tagId])
  @@index([tagId])
  @@map("user_default_specific_tags")
}
